#/usr/bin/env sh

if [ -z "${1+x}" ]; then
  size="12"
else
  size=$1
fi

if [ -z "${2+x}" ]; then
    face="medium"
else
    case $2 in
        bold) face="bold" ;;
        italic) face="italic" ;;
        bolditalic) face="bold:italic" ;;
        *) face="medium" ;;
    esac
fi

printf '\33]50;%s%s%s%d\007' "xft:Inconsolata:" "${face}" ":autohint=true:antialias=true:pixelsize=" "${size}"
