#!/bin/sh
# vim: set ft=sh :


if ! `which pygmentize >/dev/null 2>&1`; then
    echo "pygmentize not found"
    echo "easy_install it"
    exit 1
fi

if [ ! -t 0 ]; then
    file=/dev/stdin
elif [ -f $1 ]; then
    file=$1
else
    echo "Usage: $0 code.c"
    echo "or e.g. head code.c | $0"
    exit 2
fi

pygmentize -f terminal -g $file

